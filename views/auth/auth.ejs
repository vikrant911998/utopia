<%- include('../includes/header.ejs')%>
  <link rel="stylesheet" href="/css/auth/auth.css">
  <script src="/js/jquery.js"></script>
</head>
<body>
  <div class="wrapper utopia-login">
    <div class="left">
      <h3>Utopia</h3>
      <img src="/images/auth.png" alt="Rocket_image" />
    </div>
    <div class="right">
      <div class="tabs">
        <ul>
          <li class="register_li">Register</li>
          <li class="login_li">login</li>
        </ul>
      </div>

      <div class="register">
        <form action="/auth/register" method="post">
          <div class="input_field">
            <input type="email" placeholder="E-mail" name="email" class="input" />
          </div>
          <div class="input_field">
            <input type="password" placeholder="Password" name="password" class="input" />
          </div>
          <div class="input_field">
            <input
              type="password"
              name="confirm_password"
              placeholder="Confirm-Password"
              class="input"
            />
          </div>
          <button class="btn">
            <span>Register</span>
          </button>
        </form>
      </div>

      <div class="login">
        <div class="input_field">
          <input type="text" placeholder="E-mail" class="input" />
        </div>
        <div class="input_field">
          <input type="password" placeholder="Password" class="input" />
        </div>
        <button class="btn"><span>Login</span></button>
      </div>
    </div>
  </div>
  <script>
    $(".login").hide();

    $(".login_li").click(function () {
      $(this).addClass("active");
      $(".register_li").removeClass("active");
      $(".login").show();
      $(".register").hide();
    });

    $(".register_li").click(function () {
      $(this).addClass("active");
      $(".login_li").removeClass("active");
      $(".register").show();
      $(".login").hide();
    });

    const isRegister = JSON.parse("<%=isRegister %>");
    if(isRegister){
      $(".register_li").trigger('click');
    }
    else{
      $(".login_li").trigger('click');
    }
    </script>

